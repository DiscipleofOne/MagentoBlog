<?xml version="1.0"?>
<config>
    <modules>
        <TSA_Blog>
            <version>0.0.0.0</version>
        </TSA_Blog>
    </modules>

    <global>
        <helpers>
            <tsa_blog>
                <class>TSA_Blog_Helper</class>
            </tsa_blog>
        </helpers>
        <models>
            <tsa_blog>
                <class>TSA_Blog_Model</class>
                <resourceModel>tsa_blog_resource</resourceModel>
            </tsa_blog>
            <tsa_blog_resource>
                <class>TSA_Blog_Model_Resource</class>
                <entities>
                    <post>
                        <table>tsa_blog_post</table>
                    </post>
                    <comment>
                        <table>tsa_blog_comment</table>
                    </comment>
                </entities>
            </tsa_blog_resource>
        </models>
        <resources>
            <tsa_blog_setup>
                <setup>
                    <module>TSA_Blog</module>
                </setup>
            </tsa_blog_setup>
        </resources>
        <blocks>
            <tsa_blog>
                <class>TSA_Blog_Block</class>
            </tsa_blog>
        </blocks>
    </global>
    <frontend>
        <routers>
            <tsa_blog>
                <use>standard</use>
                <args>
                    <module>TSA_Blog</module>
                    <frontName>tsa_blog</frontName>
                </args>
            </tsa_blog>
        </routers>
        <layout>
            <updates>
                <tsa_blog>
                    <file>tsa/blog.xml</file>
                </tsa_blog>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
          <adminhtml>
              <args>
                  <modules>
                      <TSA_Blog after="Mage_Adminhtml">TSA_Blog_Adminhtml</TSA_Blog>
                  </modules>
              </args>
          </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <tsa_blog>
                    <file>tsa/blog.xml</file>
                </tsa_blog>
            </updates>
        </layout>

        <tsa_blog>
            <browser>
                <extensions>
                    <allowed>
                        <jpg>1</jpg>
                        <jpeg>1</jpeg>
                        <png>1</png>
                        <gif>1</gif>
                    </allowed>
                    <image_allowed>
                        <jpg>1</jpg>
                        <jpeg>1</jpeg>
                        <png>1</png>
                        <gif>1</gif>
                    </image_allowed>
                    <media_allowed>
                        <flv>1</flv>
                        <swf>1</swf>
                        <avi>1</avi>
                        <mov>1</mov>
                        <rm>1</rm>
                        <wmv>1</wmv>
                    </media_allowed>
                </extensions>
                <window_width>1000</window_width>
                <window_height>600</window_height>
                <resize_width>100</resize_width>
                <resize_height>75</resize_height>
            </browser>
        </tsa_blog>
    </adminhtml>

    <default>
        <tsa_blog>
            <wysiwyg>
                <enabled>enabled</enabled>
            </wysiwyg>
        </tsa_blog>
        <system>
            <media_storage_configuration>
                <allowed_resources>
                    <wysiwyg_image_folder>wysiwyg</wysiwyg_image_folder>
                </allowed_resources>
            </media_storage_configuration>
        </system>
    </default>
</config>
